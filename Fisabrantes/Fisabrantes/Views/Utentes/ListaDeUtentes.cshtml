@model IEnumerable<Fisabrantes.Models.Utentes>

@{
    ViewBag.Title = "Index";
}

    <h2>Utentes</h2>
<p>
    @Html.ActionLink("Criar novo Utente", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.NIF)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.NIF)
            </td>

            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.idUtente }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.idUtente }) |
                @Html.ActionLink("Apagar", "Delete", new { id = item.idUtente })
            </td>
        </tr>
    }

</table>

