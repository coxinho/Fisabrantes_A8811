@model IEnumerable<Fisabrantes.Models.Prescricoes>

@{
    ViewBag.Title = "Index";
}

<h2>ListaDePrescricoes</h2>
<p>
    @Html.ActionLink("Criar nova prescricao", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>

            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.idPrescricao }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.idPrescricao }) |
                @Html.ActionLink("Apagar", "Delete", new { id = item.idPrescricao })
            </td>
        </tr>
    }

</table>

